<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.encrypted.sms">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/envelope"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/preferences"
        android:roundIcon="@drawable/envelope"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name="com.encrypted.sms.Delete"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.Favourites"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.Send"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.Compose"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.Inboxx"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.Signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.encrypted.sms.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ComposeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.encrypted.sms.Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>